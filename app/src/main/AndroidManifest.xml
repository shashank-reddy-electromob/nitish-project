<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nitish.paymatrixandroidapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/paymatrix_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".NavigationActivity"></activity>
        <activity android:name=".UploadFileActivity" />
        <activity android:name=".UserProfileActivity" />
        <activity android:name=".TranscationDetailsActivity" />
        <activity android:name=".TransactionsActivity" />
        <activity android:name=".PayRentArchiveActivity" />
        <activity android:name=".PayRentActivity" />
        <activity android:name=".RentAgreementActivity" />
        <activity android:name=".AddPropertyActivity" />
        <activity android:name=".UserDashboardActivity" />
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>